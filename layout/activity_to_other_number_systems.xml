<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ToOtherNumberSystems"
    android:orientation="vertical"
    android:background="@color/colorBackground">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="120">

        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="35"
            android:layout_height="match_parent"
            android:text="@string/btnBack"
            android:textColor="@color/colorWhite"
            android:background="@color/colorGreen"
            android:src="@drawable/pointerleft"
            android:id="@+id/finish"
            android:textSize="20dp"/>

        <LinearLayout
            android:layout_width="15dp"
            android:layout_weight="100"
            android:layout_height="match_parent">
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10">
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="105">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="200"/>
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="100"
            android:background="@color/colorBackground"
            android:src="@drawable/swap"
            android:id="@+id/btnSwap"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="200"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20">
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_weight="100">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="100"
            android:layout_height="match_parent"
            android:text="@string/fromNS"
            android:textColor="@color/colorBlack"
            android:textSize="20sp"
            android:autoSizeMaxTextSize="20dp"
            android:gravity="center"/>
        <EditText
            android:layout_width="0dp"
            android:layout_weight="120"
            android:layout_height="match_parent"
            android:id="@+id/fromNS"
            android:gravity="center"
            android:textColor="@color/colorBlack"
            android:background="@color/colorWhite"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="100"
            android:layout_height="match_parent"
            android:text="@string/toNS"
            android:textSize="20sp"
            android:autoSizeMaxTextSize="20dp"
            android:textColor="@color/colorBlack"
            android:gravity="center"/>
        <EditText
            android:layout_width="0dp"
            android:layout_weight="120"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/toNS"
            android:textColor="@color/colorBlack"
            android:background="@color/colorWhite"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20">
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:background="@color/colorWhite"
        android:gravity="center"
        android:layout_weight="200">

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="100"
            android:id="@+id/nextNumber"
            android:hint="@string/beginningOfInput"
            android:textColor="@color/colorBlack"
            android:textSize="30sp"
            />
            <ImageButton
                android:id="@+id/NSclear"
                android:layout_width="0dp"
                android:layout_weight="15"
                android:layout_height="match_parent"
                android:paddingRight="7dp"
                android:background="@color/colorWhite"
                android:src="@drawable/cross"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnConvert"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/colorGreen"
        android:text="@string/btnConvert"
        android:textSize="25sp"
        android:textColor="@color/colorWhite"
        android:autoSizeMaxTextSize="25dp"
        android:layout_weight="120"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="700">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/answer"
            android:textSize="35dp"
            android:textColor="@color/colorBlack"/>
    </ScrollView>
</LinearLayout>